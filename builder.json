{
  "schema": {
    "slug": {
      "type": "string",
      "required": true,
      "label": "Template default slug",
      "default": "name"
    },
    "type": {
      "type": "string",
      "required": true,
      "label": "Template addon type",
      "options": ["module","theme","extension","field_type"],
      "default": "module"
    },
    "vendor": {
      "type": "string",
      "required": false,
      "label": "Template default Vendor",
      "default": "websemantics"
    },
    "description": {
      "type": "string",
      "required": false,
      "label": "Description",
      "default": "An addon template for Pyro Builder."
    },
    "company": {
      "type": "string",
      "required": false,
      "label": "Company name",
      "default": "Web Semantics, Inc."
    }
  }
}
