{
  "schema": {
    "slug": {
      "type": "string",
      "required": true,
      "label": "Template slug",
      "default": "template"
    },
    "description": {
      "type": "string",
      "required": false,
      "label": "Description",
      "default": "A starting addon template for Pyro Builder."
    },
    "company": {
      "type": "string",
      "required": false,
      "label": "Company name",
      "default": "Web Semantics, Inc."
    },
    "path": {
      "type": "string",
      "required": true,
      "label": "Path",
      "default": "./{{slug}}"
    }
  }
}
